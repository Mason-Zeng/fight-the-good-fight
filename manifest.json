{
  "manifest_version": 3,
  "name": "Fight the Good Fight",
  "version": "1.0.0",
  "action": {
    "default_title": "Fight the Good Fight",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "show-ui": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Show the popup UI"
    }
  },
  "permissions": ["tabs", "windows"],
  "host_permissions": []
}
